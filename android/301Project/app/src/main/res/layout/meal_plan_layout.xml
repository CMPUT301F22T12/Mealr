<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="50dp"
    android:background="@drawable/rounded_rect"
    android:orientation="vertical"
    android:backgroundTint = "@color/cardview_dark_background"
    android:padding="10dp"
    android:weightSum="100">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
        <TextView
            android:id="@+id/mp_nameText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="15"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="3dp"
            android:text="Title"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/startDateTextView"
            android:text="Start time"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_rect"
            android:backgroundTint="#1a459522"
            android:gravity="center"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/to_mealplan"
            android:text="  to  "
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/endDateTextView"
            android:text="End date"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_rect"
            android:backgroundTint="#1aA704FD"
            android:gravity="center"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:text="Recipes"
                android:textSize="25dp" />
        </LinearLayout>
        <LinearLayout
            android:textColor="@color/white"
            android:id="@+id/mp_recipeContainer"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/rounded_rect"
            android:backgroundTint="#1aC9BAB0"
            android:orientation="horizontal">
            <ListView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mp_recipeList"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:text="Ingredients"
                android:textSize="25dp" />
        </LinearLayout>
        <LinearLayout
            android:textColor="@color/white"
            android:id="@+id/mp_IngredientContainer"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/rounded_rect"
            android:backgroundTint="#1aC9BAB0"
            android:orientation="horizontal">
            <ListView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mp_ingredientList"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>