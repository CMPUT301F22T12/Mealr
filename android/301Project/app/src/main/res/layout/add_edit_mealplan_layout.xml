<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit_title_mealplan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Meal Plan Name"
        android:padding="5dp"
        android:textSize="34dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/ingredient_edit_padding">
        <TextView
            android:id="@+id/ingredients_label_mealplan"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Ingredients"
            android:layout_weight="1"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteIngredient_mealplan"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:hint="Enter an ingredient"/>
            <Button
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:id="@+id/add_ingredient_button_mealplan"
                android:text="Add"/>

        </LinearLayout>

        <ListView
            android:id="@+id/mealplan_ingredients_listview"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:padding="5sp"
            android:divider="@android:color/transparent"
            android:dividerHeight="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/ingredient_edit_padding">

        <TextView
            android:id="@+id/recipes_label_mealplan"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Recipes"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteRecipe_mealplan"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:hint="Enter an recipe" />

            <Button
                android:id="@+id/add_recipe_button_mealplan"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:text="Add" />

        </LinearLayout>

        <ListView
            android:id="@+id/mealplan_recipes_listview"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="5dp"
            android:padding="5sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:id="@+id/start_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Start date"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_start_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Start date"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:id="@+id/end_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="End date"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_end_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="End date"
            android:inputType="textPersonName" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/delete_mealplan_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete Meal Plan" />
    </LinearLayout>

</LinearLayout>