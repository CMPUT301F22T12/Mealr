<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Recipe Name"
        android:padding="15dp"
        android:text="Name"
        android:textSize="34dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/ingredient_edit_padding">

        <ImageView
            android:id="@+id/recipeImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_rect"
            android:foreground="@drawable/rounded_rect_trans"
            android:scaleType="centerCrop"
            android:src="@drawable/meal" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/uploadImageButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:text="Upload" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/cameraButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:text="Camera" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/ingredient_edit_padding">

        <TextView
            android:id="@+id/prep_time_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Prep Time"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/edit_prep_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Prep Time (in mins)"
            android:inputType="numberDecimal"
            android:maxLength="7"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/ingredient_edit_padding">

        <TextView
            android:id="@+id/servings_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Servings"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edit_servings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Servings"
            android:inputType="number"
            android:padding="5sp"
            android:maxLength="7"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/ingredient_edit_padding">

        <TextView
            android:id="@+id/comments_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Comments"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edit_comments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Comments"
            android:maxLength="40"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/ingredient_edit_padding">

        <TextView
            android:id="@+id/category_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Category"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/edit_category_recipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/ingredient_edit_padding">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/ingredients_label"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:text="Ingredients"
                android:layout_weight="1"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteIngredient"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Enter an ingredient"
                android:maxLength="30"/>
            <Button
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:id="@+id/add_ingredient_button"
                android:text="Add"/>

        </LinearLayout>

        <ListView
            android:id="@+id/recipe_ingredients_listview"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="5dp"
            android:padding="5sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        >
        <Button
            android:id="@+id/delete_recipe_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete Recipe" />

    </LinearLayout>

</LinearLayout>